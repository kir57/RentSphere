<style>
  .btn-search {
   background-color: #fe424d;
   color: white;
   margin-left: 10px;
   border-radius: 25px;
   padding: 0 1rem 0 1rem;
}

.btn-search:hover {
   background-color: #fe424d;
   color: white;
}

.btn-search i {
 display: inline;
}

.search-input {
 border-radius: 25px;
 padding: 0.5rem 2rem 0.5rem 2rem;
 font-size: 0.95rem;
}
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
   <div class="container-fluid">
     <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
     <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
       <span class="navbar-toggler-icon"></span>
     </button>
     <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
       <div class="navbar-nav">
         <a class="nav-link" href="/listings"><b>Explore</b></a>
       </div>

       <div class="navbar-nav ms-auto search">
         <form class="navbar-nav ms-auto form-inline" action="/listings" method="GET">
           <!-- Search input for location -->
           <input class="form-control mr-sm-2 search-input" type="search" name="location" placeholder="Search destinations" value="<%= location %>">
           
           <!-- Hidden input to hold rentDate -->
           <input type="hidden" id="navbarRentDate" name="rentDate" value="<%= rentDate %>">
       
           <!-- Submit button -->
           <button class="btn btn-search" type="submit">
               <i class="fa-solid fa-magnifying-glass"></i>&nbsp;Search
           </button>
       </form>
       </div>

       <div class="navbar-nav ms-auto">
         <% if (curUser) { %>
           <li class="nav-item">
               <a class="nav-link" href="/my-rentals"><b>My Rentals</b></a>
           </li>
           <a class="nav-link" href="/logout"><b>Log out</b></a>
         <% } else { %>
           <a class="nav-link" href="/signUp"><b>Sign Up</b></a>
           <a class="nav-link" href="/login"><b>Log In</b></a>
         <% } %>
       </div>
       
       <% if (curUser) { %>
        &nbsp;&nbsp;&nbsp;
         <a class="nav-link" href="/listings/new"><b>Add new Listing</b></a>
       <% } %>
       
     </div>
   </div>
</nav>
